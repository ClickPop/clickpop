{{#> layouts/base
  title="ClickPop"
  description="Radical design for real people."
  ogTitle="Distant Pals Logo by ClickPop"
  ogDescription="A project we did for an awesome newsletter by @tnrt"
  ogImage="https://www.clickpopmedia.com/img/project/distantpals/distant-pals-og.png"
}}

{{#*inline "main-block"}}
  <div class="container mb-5">
    <div class="row">
      <div class="col">
        <a href="/"><img src="img/logo.gif" alt="Good One" width="200" class="mt-3" /></a>
      </div>
    </div>
    <div class="row my-3">
      <div class="col">
        <h1 class="h2">Distant Pals</h1>
        <p class="lead">
          A newsletter about connecting while apart.
        </p>
      </div>
    </div>


    <!-- Colors -->
    <div class="row">
      <div class="col">
        <h2 class="h3">Colors</h2>
        <p>
          The goal was <span class="text--distantpals-peach">light</span>, <span class="text--distantpals-mint">fun</span>, <span class='text--distantpals-purple'>air</span> <span class="text--distantpals-blue">high-fives.</span>
        </p>
      </div>
    </div>

    <div class="row mb-5">

      <div class="col-6 col-md-4 col-lg-2">
        <div class="swatch border--rounded border--shadow mb-3">
          <div class="swatch__color bg--distantpals-peach">
          </div>
          <div class="swatch__value p-3">
            <div>
              #ffa384
            </div>
            <div>
              <span class="badge bg--distantpals-peach">Primary</span>
            </div>
          </div>
        </div>
      </div>

      <div class="col-6 col-md-4 col-lg-2">
        <div class="swatch border--rounded border--shadow mb-3">
          <div class="swatch__color bg--distantpals-yellow">
          </div>
          <div class="swatch__value p-3">
            <div>
              #f0c05e
            </div>
            <div>
              <span class="badge bg--distantpals-yellow">Secondary</span>
            </div>
          </div>
        </div>
      </div>

      <div class="col-6 col-md-4 col-lg-2">
        <div class="swatch border--rounded border--shadow mb-3">
          <div class="swatch__color bg--distantpals-navy">
          </div>
          <div class="swatch__value p-3">
            <div>
              #25283b
            </div>
          </div>
        </div>
      </div>

      <div class="col-6 col-md-4 col-lg-2">
        <div class="swatch border--rounded border--shadow mb-3">
          <div class="swatch__color bg--distantpals-purple">
          </div>
          <div class="swatch__value p-3">
            <div>
              #9d788e
            </div>
          </div>
        </div>
      </div>

      <div class="col-6 col-md-4 col-lg-2">
        <div class="swatch border--rounded border--shadow mb-3">
          <div class="swatch__color bg--distantpals-blue">
          </div>
          <div class="swatch__value p-3">
            <div>
              #83a2bf
            </div>
          </div>
        </div>
      </div>

      <div class="col-6 col-md-4 col-lg-2">
        <div class="swatch border--rounded border--shadow mb-3">
          <div class="swatch__color bg--distantpals-mint">
          </div>
          <div class="swatch__value p-3">
            <div>
              #82bf97
            </div>
          </div>
        </div>
      </div>

    </div>


    <!-- Logos -->
    <div class="row mb-3">
      <div class="col-md-6">
        <h2 class="h3">Logo Options</h2>
      </div>
      <div class="col-md-6 text-md-right">
        <a href="https://drive.google.com/drive/folders/1NYemsgn7iZIl0kMY_TmnzaDhZbtLxqMC?usp=sharing" class="btn btn--distantpals">Download from Google Drive</a>
      </div>
    </div>

    <div class="py-5 mb-5 bg--distantpals-navy border--rounded border--shadow project__list">
      <div class="row">
        <div class="col">
          <h2 class="h4 text-white px-5 py-0 my-0">Dark BG</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <img src="img/project/distantpals/distant pals-01.png" class="img-fluid p-5" />
        </div>
        <div class="col-md-6 offset-md-3">
          <img src="img/project/distantpals/distant pals-02.png" class="img-fluid p-5" />
        </div>
        <div class="col-md-6 offset-md-3">
          <img src="img/project/distantpals/distant pals-03.png" class="img-fluid p-5" />
        </div>
        <div class="col-md-6 offset-md-3">
          <img src="img/project/distantpals/distant pals-04.png" class="img-fluid p-5" />
        </div>
      </div>
      <div class="row">
        <div class="col">
          <img src="img/project/distantpals/distant-pals-arms.png" class="img-fluid" />
        </div>
      </div>
    </div>

    <div class="py-4 mb-5 bg--white border--rounded border--shadow project__list">
      <div class="row">
        <div class="col">
          <h2 class="h4 px-5 py-0 my-0">Light BG</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <img src="img/project/distantpals/distant pals-01.png" class="img-fluid p-5" />
        </div>
        <div class="col-md-6 offset-md-3">
          <img src="img/project/distantpals/distant pals-02.png" class="img-fluid p-5" />
        </div>
        <div class="col-md-6 offset-md-3">
          <img src="img/project/distantpals/distant pals-03.png" class="img-fluid p-5" />
        </div>
        <div class="col-md-6 offset-md-3">
          <img src="img/project/distantpals/distant pals-04.png" class="img-fluid p-5" />
        </div>
      </div>
      <div class="row">
        <div class="col">
          <img src="img/project/distantpals/distant-pals-arms.png" class="img-fluid" />
        </div>
      </div>
    </div>


  <!-- Applications -->
  <div class="row mb-3">
    <div class="col">
      <h2 class="h3">Example applications</h2>
    </div>
  </div>

  <div class="row mb-5">
    <div class="col">
      <img src="img/project/distantpals/distant-pals-og.png" class="img-fluid border--rounded border--shadow" />
    </div>
  </div>

</div>

{{/inline}}

