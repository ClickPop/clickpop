<section id="{{id}}" class="featured {{#if flip}}featured--flip{{/if}}">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 py-lg-5 text-center text-lg-left {{#if flip}}pr-lg-5 offset-lg-1{{else}}offset-lg-6 pl-lg-5{{/if}}">
        <div class="py-lg-5 my-lg-5 px-lg-4">
          <img src="img/project/{{id}}/{{logo}}" width="{{logoWidth}}" alt="{{logoAlt}}t" class="py-3" />
          <h2>{{title}}</h2>
          {{{description}}}
          {{#if projectLink}}
          <p class="pb-5">
            <a href="{{projectLink}}" target="_blank"><i class="fas fa-link"></i> {{projectLinkSimple}}</a><br />
            {{#if producthunt}}<a href="{{producthunt}}" class="mr-2" target="_blank"><i class="fab fa-product-hunt"></i> <small>Check it out on Product Hunt</small></a>{{/if}}
            {{#if instagram}}<a href="https://www.instagram.com/{{instagram}}" class="mr-2" target="_blank"><i class="fab fa-instagram"></i></a>{{/if}}
          </p>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</section>
